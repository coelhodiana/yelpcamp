<% include partials/header.ejs %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Bem-vindo ao YelpCamp!</h1>
            <p>Conhe√ßa os melhores acampamento do mundo.</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg">Adicionar novo acampamento</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Melhores locais para acampar</h3>
        </div>
    </div>

    <div class="row text-center">
        <% campgrounds.forEach((campground)=>{ %>
        <div class="col-md-3 col-sm-6">
            <div class="img-thumbnail">
                <img src="<%= campground.image %>" alt="" class="img-fluid">
                <div class="caption">
                    <h5><%= campground.name %></h5>
                </div>
            </div>
        </div>
        <% }); %>
    </div>

</div>

